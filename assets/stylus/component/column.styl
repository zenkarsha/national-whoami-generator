.fields-column-2
  display flex
  justify-content space-between

  .column
    margin-bottom 0

  > .column
    width calc(100% / 2 - 16px)

  &.small-padding
    > .column
      width calc(100% / 2 - 4px)

  .column-8
    width calc(100% / 12 * 8 - 16px)

  .column-4
    width calc(100% / 12 * 4 - 16px)

  +below(____)
    &.pad-full-width
      display block
      .column
        width 100%

  +below(__)
    &.mobile-full-width
      display block
      .column
        width 100%

