#output-container
  width 960px !important
  min-height 679px !important
  line-height 1
  background #000

  #output-question
    position relative
    .question-text-container
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      display flex
      justify-content center
      align-items center

      .question-text-wrapper
        margin-left 440px
        width 410px !important
        height calc(679px - 180px)
        margin-top -130px
        position relative

        .question-text1
          position absolute
          top 65px
          left 0
          max-width 300px
          max-height 80px
          overflow hidden

        .question-text2
          position absolute
          top 217px
          left 0
          max-width 330px
          max-height 80px
          overflow hidden

        .question-text3
          position absolute
          top 360px
          left 0
          max-width 400px
          max-height 200px
          overflow hidden

        .question-text1
        .question-text2
        .question-text3
          color #FBD507
          transform: skew(0, -4deg)
          font-size 30px
          line-height 40px
          font-weight bold
          letter-spacing 8px
          padding-left 8px
          text-shadow:  -1px 0px #000, -0px 1px #000, -2px 1px #000, -1px 2px #000, -3px 2px #000, -2px 3px #000, -4px 3px #000, -3px 4px #000, -5px 4px #000, -4px 5px #000, -6px 5px #000, -5px 6px #000, -7px 6px #000, -6px 7px #000, -8px 7px #000, -7px 8px #000, -8px 8px #000


  #output-answer
    position relative
    .answer-text-container
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      display flex
      justify-content center
      align-items center

      .answer-text-wrapper
        margin-left 440px
        width 470px !important
        height calc(679px - 180px)
        margin-top -130px
        display flex
        justify-content center
        align-items center
        position relative

        .answer-text
          color #FBD507
          text-align center
          font-size 80px
          line-height 100px
          font-weight bold
          text-shadow:  -1px 0px #000, -0px 1px #000, -2px 1px #000, -1px 2px #000, -3px 2px #000, -2px 3px #000, -4px 3px #000, -3px 4px #000, -5px 4px #000, -4px 5px #000, -6px 5px #000, -5px 6px #000, -7px 6px #000, -6px 7px #000, -8px 7px #000, -7px 8px #000, -8px 8px #000
