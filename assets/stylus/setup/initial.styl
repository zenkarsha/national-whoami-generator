html
  height 100%

body
  width 100%
  height 100%
  min-width 300px
  -webkit-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  font-family "Helvetica Neue", Helvetica, Arial, "STHeiti", "微軟正黑體", "Microsoft Yahei", sans-serif
  font-size $global-font-size
  line-height $global-lineheight
  color $global-text-color
  background $global-background
  &.lock-scroll
    overflow hidden
    position fixed

a
  color: $link-color
  text-decoration: none
  border-bottom 1px solid $link-color
  &:hover
    color: $link-hover-color
    border-bottom 1px solid $link-hover-color
  &:active
    color: $link-active-color
    border-bottom 1px solid $link-active-color
  &:visited
    color: $link-visited-color
    border-bottom 1px solid $link-visited-color

input[type=text]
input[type=email]
textarea
  position relative
  width 100%
  padding 10px
  font-size 1.2rem
  outline none
  box-sizing border-box
  transition border $t-sec
  border 0
  border-radius $s-radius
  background $color-white
  border 2px solid $color-gray
  -webkit-appearance none
  &:focus
    border-color darken($color-black, 10%)
  &.half-size
    width 50%
  &.is-danger
    border-color $color-red
  & + input[type=text]
  & + input[type=email]
  & + textarea
    margin-top 16px

input[type=radio]
  appearance none
  width 20px
  height 20px
  margin 0
  vertical-align text-top
  background $color-white
  border 2px solid $color-black
  border-radius 50%
  &:checked
    background radial-gradient(circle, $color-black 45%, $color-white 50%)

input[type=checkbox]
  appearance none
  width 20px
  height 20px
  margin 0
  vertical-align text-top
  background $color-white
  border 2px solid $color-black
  border-radius $s-radius
  &:checked
    background url('/images/icon/checked.svg') center no-repeat
    background-size cover

label
  font-size 1rem
  &.checkbox-label
    margin-right 16px
  +below(__)
    font-size .9rem

textarea
  height 100px
  resize none

select
  position relative
  border none
  background transparent
  appearance none
  padding 10px
  font-size 1.2rem
  width 100%
  background-color $color-white
  border 2px solid $color-gray
  border-radius $s-radius
  background-image url('data:image/svg+xmlutf8base64,')
  background-position right 8px center
  background-repeat no-repeat
  &:focus
    border 2px solid $color-black

#page
  height 100%
